<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="product_template_shop2stock_form_view">
        <field name="name">product.template.shop2stock</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
<div name="button_box" position="inside">
                    <button string="Update shop2stock" type="object"
                        name="shop2shop_sale_offer"
                        class="oe_stat_button" icon="fa-random" />
                   
                </div>
                
                
            <xpath expr="//page[@name='general_information']" position="after">
                <page name="Shop2 Stock Details" string="Shop2 Stock ">
                    <group string="Shop2 Stock  ">
                        <field name="s2s_product" />
                                                <field name="s2s_stock_level"/>
                        <field name="s2s_stock" />
                    </group>
                </page>
            </xpath>

        </field>
    </record>

   
     
</odoo>
